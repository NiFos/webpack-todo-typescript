{
  "parser": "@typescript-eslint/parser",
  "env": {
    "browser": true,
    "es2020": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "no-extra-semi": 2,
    "no-duplicate-case": "error",
    "eqeqeq": "error",
    "no-redeclare": "error",
    "spaced-comment": "error"
  }
}
